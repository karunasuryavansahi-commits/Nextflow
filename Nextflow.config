// Nextflow configuration for your pipeline

params {
    reads = "Data/Sample.fastq"       // Input FASTQ file
    reference = "reference/chr22.fa"  // Reference genome
    outdir = "results"                // Output directory
}

process {
    executor = "local"   // Change to "slurm" or "pbs" if using cluster
    cpus = 2             // Reduced from 4 to fit your system
    memory = "3 GB"      // Reduced from 8 GB to fit your system
    time = "2h"
}

workDir = "work"         // Default working directory

